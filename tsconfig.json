{
  "compilerOptions": {
    "outDir": "build",
    "strict": true,
    "target": "es2019",
    "module": "commonjs",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals", "vitest/setup"],
    "paths": {
      "~/*": ["./src/*"],
      "!/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts", "vitest/**/*.ts"]
}
