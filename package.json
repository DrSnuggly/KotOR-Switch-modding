{
  "name": "kotor-switch-modding",
  "version": "3.0.0",
  "description": "Tools to help make modding Star Wars: Knights of the Old Republic I & II easier for the Nintendo Switch.",
  "main": "build/main.js",
  "bin": {
    "ksm": "build/main.js"
  },
  "files": [
    "build/**/*.js",
    "assets/**/*"
  ],
  "scripts": {
    "clean": "rimraf build coverage dist",
    "build": "tspc --project tsconfig.build.json",
    "build:watch": "tsc-watch --compiler ts-patch/compiler --project tsconfig.build.json",
    "format": "prettier --write . '**/*.{js,ts,mts,mjs,json,yaml,md}'",
    "pkg": "npx pkg . --public-packages '*'",
    "test": "vitest --ui",
    "test:ci": "vitest run"
  },
  "pkg": {
    "assets": [
      "assets/**/*"
    ],
    "targets": [
      "node18-macos-arm64"
    ],
    "outputPath": "dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DrSnuggly/KotOR-Switch-modding.git"
  },
  "author": "DrSnuggly",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/DrSnuggly/KotOR-Switch-modding/issues"
  },
  "homepage": "https://github.com/DrSnuggly/KotOR-Switch-modding#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "fs-extra": "^11.1.1",
    "globby": "^11.1.0",
    "word-wrap": "^1.2.3"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "^11.0.0",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.4.1",
    "@types/temp": "^0.9.1",
    "@vitest/coverage-v8": "^0.33.0",
    "@vitest/ui": "^0.33.0",
    "copyfiles": "^2.4.1",
    "pkg": "^5.8.1",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "tempy": "^3.1.0",
    "ts-node": "^10.9.1",
    "ts-patch": "^3.0.2",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.1.6",
    "typescript-transform-paths": "^3.4.6",
    "vitest": "^0.33.0"
  }
}
