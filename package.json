{
  "name": "kotor-switch-modding",
  "version": "3.0.0",
  "description": "Tools to help make modding Star Wars: Knights of the Old Republic I & II easier for the Nintendo Switch.",
  "main": "build/main.js",
  "bin": {
    "ksm": "build/main.js"
  },
  "files": [
    "build/**/*.js",
    "assets/**/*"
  ],
  "scripts": {
    "clean": "rimraf build coverage dist",
    "build": "npx tsc --project tsconfig.build.json",
    "build:watch": "npx tsc --project tsconfig.build.json --watch",
    "build-pkg:watch": "npx tsc-watch --project tsconfig.build.json --onSuccess \"npm run pkg\"",
    "pkg": "npx pkg . --public-packages '*'",
    "test": "jest"
  },
  "pkg": {
    "assets": [
      "assets/**/*"
    ],
    "targets": [
      "node18-macos-arm64"
    ],
    "outputPath": "dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DrSnuggly/KotOR-Switch-modding.git"
  },
  "author": "DrSnuggly",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/DrSnuggly/KotOR-Switch-modding/issues"
  },
  "homepage": "https://github.com/DrSnuggly/KotOR-Switch-modding#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "fs-extra": "^11.1.1",
    "globby": "^11.1.0",
    "word-wrap": "^1.2.3"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "^11.0.0",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.1",
    "@types/temp": "^0.9.1",
    "copyfiles": "^2.4.1",
    "jest": "29.5",
    "pkg": "^5.8.1",
    "rimraf": "^5.0.1",
    "tempy": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.1.6"
  }
}
